# Frontend + server config (Next.js)
# Choose active testnet: etherlink | somnia
NEXT_PUBLIC_NETWORK=somnia

# Public RPC URLs (no sign-in needed for these public endpoints)
NEXT_PUBLIC_ETHERLINK_RPC_URL=https://node.shadownet.etherlink.com
NEXT_PUBLIC_SOMNIA_RPC_URL=https://dream-rpc.somnia.network/

# Optional generic fallback RPC (kept for backwards compatibility)
NEXT_PUBLIC_RPC_URL=https://node.shadownet.etherlink.com

# Contract address per network (fill after deployment)
NEXT_PUBLIC_ETHERLINK_CONTRACT_ADDRESS=
NEXT_PUBLIC_SOMNIA_CONTRACT_ADDRESS=

# Legacy single-network contract address (optional)
# NEXT_PUBLIC_CONTRACT_ADDRESS=

# Pinata (used by /api/pinata/upload)
# IMPORTANT: keep this value secret. If exposed, rotate it in Pinata.
NEXT_PUBLIC_PINATA_JWT=

# WalletConnect
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Contract deployment (DO NOT COMMIT)
PRIVATE_KEY=

# Server-only environment variables (NOT exposed to browser)
PINATA_JWT=
